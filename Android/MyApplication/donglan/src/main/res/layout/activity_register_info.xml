<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_finish"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册完成"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/text_title"
        android:layout_below="@+id/text_finish"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="希望通过几个问题，让我们更了解你！"
        />

    <LinearLayout
        android:id="@+id/text_info"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:layout_marginRight="25dp"
                android:layout_alignParentRight="true"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/birthday"
                android:layout_below="@+id/sex"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你的出生年月"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/height"
                android:layout_below="@+id/birthday"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你的身高"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/eight"
                android:layout_below="@+id/height"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你的体重"
                android:textSize="18sp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:layout_marginLeft="25dp"
                android:layout_alignParentLeft="true"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/text_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:layout_toRightOf="@+id/text_male"
                android:layout_marginLeft="20dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_birthday"
                android:layout_below="@+id/text_male"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1990年12月"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/text_height"
                android:layout_below="@+id/text_birthday"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="174cm"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/text_weight"
                android:layout_below="@+id/text_height"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55kg"
                android:textSize="18sp"
                />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/button"
        android:layout_marginTop="35dp"
        android:textSize="22sp"
        android:src="@mipmap/login_button"
        android:textColor="#ffffff"
        android:text="保存"
        android:background="@mipmap/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_info"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

</RelativeLayout>