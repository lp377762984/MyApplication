<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/dl_gery"
        >
        <ImageView
            android:id="@+id/sell_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_back"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买确认"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>


    <ScrollView
        android:layout_below="@+id/rl_1"
        android:layout_above="@+id/rl_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="187dp"
                android:layout_marginTop="15dp"
                >
                <com.cn.danceland.myapplication.view.XCRoundRectImageView
                    android:id="@+id/xc_img"
                    android:layout_width="300dp"
                    android:layout_height="187dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/sijiao_card"
                    />

                <TextView
                    android:id="@+id/tv_branch_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/white"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:id="@+id/tv_course_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="减脂"
                        android:textColor="@color/color_dl_yellow"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="一对一"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="一对一"
                        android:textColor="@color/white"
                        android:layout_marginTop="2dp"
                        />
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="一对一"
                        android:textColor="@color/white"
                        android:layout_marginTop="2dp"
                        />

                </LinearLayout>



            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/rg_who"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:background="#fff"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/btn_sijiao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_radiobtn"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="购买私教"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="#333333" />

                    <RadioButton
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_radiobtn"
                        android:id="@+id/btn_sijiaodingjin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:text="购买私教定金"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="#333333" />
                </RadioGroup>



            </LinearLayout>

            <RelativeLayout
                android:layout_width="68dp"
                android:layout_height="45dp"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                >

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员须知"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    />
                <View
                    android:layout_below="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/color_dl_yellow"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_shuoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="6dp"
                />


        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_buy"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        style="@style/BtnCommitStyle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即购买"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/white"
            />

    </RelativeLayout>

</RelativeLayout>