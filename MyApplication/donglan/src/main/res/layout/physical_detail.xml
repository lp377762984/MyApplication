<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_01"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/tv_zhubiaoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_01"
                android:text="主标题"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv_fubiaoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_01"
                android:text="副标题"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/tv_zhubiaoti"
                android:gravity="bottom"
                />

            <TextView
                android:id="@+id/rl_buzhou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="步骤:"
                android:layout_below="@+id/tv_zhubiaoti"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_buzhou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_buzhou"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:text="xxxxxxx"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/rl_zhuyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注意:"
                android:layout_below="@+id/tv_buzhou"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tv_zhuyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxx"
                android:textSize="16sp"
                android:layout_below="@+id/rl_zhuyi"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/rl_dongzuoxiangjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动作详解:"
                android:layout_below="@+id/tv_zhuyi"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:id="@+id/ll_img"
                android:layout_below="@+id/rl_dongzuoxiangjie"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/img_03"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/img_04"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tv"
                android:layout_below="@+id/ll_img"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_buzhou_01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="第一步"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_buzhou_02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="第二步"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_buzhou_03"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="第三步"
                    android:gravity="center"/>
            </LinearLayout>

            <TextView
                android:id="@+id/rl_result"
                android:layout_below="@+id/ll_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试结果:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                />
<!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:orientation="vertical">-->
    <!---->
<!--</LinearLayout>-->
            <RadioGroup
                android:id="@+id/rg_result"
                android:layout_below="@+id/rl_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/rb_result_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="较差"/>
                <RadioButton
                    android:id="@+id/rb_result_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="一般"/>
                <RadioButton
                    android:id="@+id/rb_result_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="良好"/>

            </RadioGroup>

            <Button
                android:id="@+id/bt_next"
                android:layout_below="@+id/rg_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                style="@style/BtnCommitStyle"
                />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>