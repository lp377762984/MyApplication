<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white"
    >


    <RelativeLayout
        android:id="@+id/rl_parent"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <RelativeLayout
            android:id="@+id/rl_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/sijiao_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20节减脂私教"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/sijiao_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sijiao_title"
                android:text="购买节数：20节"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:textColor="#c0c0c0"
                />
            <TextView
                android:id="@+id/sijiao_shengyu"
                android:layout_below="@+id/sijiao_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余节数：11"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:textColor="#c0c0c0"
                />
            <TextView
                android:id="@+id/sijiao_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/sijiao_shengyu"
                android:text="有效期：2017-05-01至2018-05-01"
                android:textSize="12sp"
                android:textColor="#c0c0c0"
                />

            <TextView
                android:id="@+id/sijiao_jiaolian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/sijiao_title"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:text="上课教练：马云"
                android:textSize="14sp"
                />

            <RelativeLayout
                android:id="@+id/sijiao_yuyue"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@color/dl_gery"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="预约"
                    android:textSize="14sp"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/sijiao_fangshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/sijiao_date"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textSize="12sp"
                android:textColor="#c0c0c0"
                android:text="一对一"
                />

        </RelativeLayout>

        <ImageView
            android:id="@+id/down_img"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/down_arow"
            />
        <ImageView
            android:id="@+id/up_img"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/up_arow"
            android:visibility="gone"
            />

    </RelativeLayout>

    <View
        android:id="@+id/parent_line"
        android:layout_below="@+id/rl_parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        />

</RelativeLayout>