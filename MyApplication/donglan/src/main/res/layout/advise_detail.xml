<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_01"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/dl_gery">

        <ImageView
            android:id="@+id/ad_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_back"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反馈详情"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_02"
        android:layout_below="@+id/rl_01"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型"
            android:textSize="18sp"
            android:textColor="@color/color_dl_yellow"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            />
        <LinearLayout
            android:layout_toRightOf="@+id/tv_type"
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:layout_marginRight="80dp"
            >
            <TextView
                android:id="@+id/fankui_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="反馈时间："
                android:textSize="14sp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/huifu_time"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="回复时间："
                android:textSize="14sp"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="状态"
            android:textSize="18sp"
            android:paddingRight="15dp"
            />

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_below="@+id/rl_02"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#c0c0c0"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/rl_tv_fankui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反馈内容："
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_fankui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#C0C0C0"
            android:layout_below="@+id/rl_tv_fankui"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/rl_tv_huifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_fankui"
            android:layout_marginTop="15dp"
            android:text="回复内容："
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_huifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_tv_huifu"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="#C0C0C0"/>

    </RelativeLayout>


</RelativeLayout>