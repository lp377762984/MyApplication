<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_guizi"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/cabinet"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img_guizi"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/cabinet_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="柜号：123"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/tv_locker_zone"
                android:layout_below="@+id/cabinet_num"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="区域"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始日期：2017-10-20"
                android:layout_alignParentTop="true"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/overtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束日期：2017-10-20"
                android:layout_alignParentBottom="true"
                android:textSize="14sp"
                />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>