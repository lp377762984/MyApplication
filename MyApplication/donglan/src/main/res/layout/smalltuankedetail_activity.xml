<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_coursedetail_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/dl_gery">

        <ImageView
            android:id="@+id/small_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_back"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            />
        <TextView
            android:id="@+id/tv_tuanke_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小团体私教"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_coursedetail_title">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_coursedetail"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:id="@+id/course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="课程名称"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/course_length"
                    android:layout_below="@+id/course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程时长"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/course_place"
                    android:layout_below="@+id/course_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="上课场馆"
                    />
                <TextView
                    android:id="@+id/course_room"
                    android:layout_below="@+id/course_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="上课场地"
                    />

                <TextView
                    android:id="@+id/course_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="小团体"
                    />
                <ImageView
                    android:id="@+id/course_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/rl_coursedetail"
                android:background="#c0c0c0"
                />

            <RelativeLayout
                android:id="@+id/course_jiaolian_huiyuan"
                android:layout_below="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上课教练"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/course_jiaolian_huiyuan_circle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toLeftOf="@+id/course_jiaolian_huiyuan_name"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    />

                <TextView
                    android:id="@+id/course_jiaolian_huiyuan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>


            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/course_jiaolian_huiyuan"
                android:background="#c0c0c0"
                />

            <RelativeLayout
                android:id="@+id/rl_course_renshu"
                android:layout_below="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/course_renshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前人数（10）"
                    android:textSize="16sp"
                    />

                <com.cn.danceland.myapplication.utils.NestedExpandaleListView
                    android:id="@+id/my_expanda"
                    android:layout_below="@+id/course_renshu"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.cn.danceland.myapplication.utils.NestedExpandaleListView>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_button_yuyue"
                android:layout_below="@+id/rl_course_renshu"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                style="@style/BtnCommitStyle">
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>


            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/rl_button_yuyue"
                android:layout_marginTop="8dp"
                android:background="#c0c0c0"
                />

            <TextView
                android:id="@+id/tv_kechengzhaopian"
                android:layout_below="@+id/line3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程照片"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <LinearLayout
                android:id="@+id/rl_kecheng_pic"
                android:layout_below="@+id/tv_kechengzhaopian"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pic_01"
                    android:layout_marginLeft="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"/>
                <ImageView
                    android:id="@+id/pic_02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"/>
                <ImageView
                    android:id="@+id/pic_03"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"/>


            </LinearLayout>


            <View
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/rl_kecheng_pic"
                android:background="#c0c0c0"
                />

            <LinearLayout
                android:id="@+id/ll_pingfen"
                android:layout_below="@+id/line5"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课程评分"
                        />
                    <TextView
                        android:id="@+id/tv_kecheng_fenshu"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分数"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="教练评分"
                        />
                    <TextView
                        android:id="@+id/tv_jiaolian_fenshu"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分数"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="场地评分"
                        />
                    <TextView
                        android:id="@+id/tv_changdi_fenshu"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分数"
                        />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/ll_pingfen"
                android:background="#c0c0c0"
                />

            <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_below="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程介绍"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/tv_content"
                    android:layout_below="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="动岚健健身创办于2005年，做为全国连锁健身俱乐部，目前在北京市、河北省、河南省、山东省、广西省、广东省、山西省、四川省、江苏省、陕西省、甘肃、湖南. 湖北 已经拥有近50家连锁店，总营业面积已达6万平米，会员总量已达数十万人，员工总量已达2000人 短短7年就已发展到近50家连锁店，是全国发展最快的健身俱乐部之一"/>

            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>




</RelativeLayout>