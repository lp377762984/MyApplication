<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_mianlayout">

    <com.cn.danceland.myapplication.view.HeadZoomScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_top_bg"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                android:scaleType="centerCrop"
                android:src="@drawable/img_man" />

            <ImageView

                android:id="@+id/iv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:src="@drawable/img_edit" />

            <TextView
                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/ll_01"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp"
                android:textColor="#999999"
                android:textSize="14sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_above="@id/tv_nick_name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/img_my_avatar" />


            <View
                android:id="@+id/line11"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/iv_top_bg"
                android:layout_marginTop="30dp"
                android:background="@null">

            </View>

            <LinearLayout
                android:id="@+id/ll_01"
                android:layout_width="325dp"
                android:layout_height="60dp"


                android:background="@drawable/bg_white"
                android:orientation="horizontal"
                android:layout_alignBottom="@+id/line11"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:id="@+id/ll_my_dyn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="动态"
                        android:textColor="@color/color_content_text"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/tv_dyn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/color_content_text"
                        android:textSize="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_my_guanzhu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="关注"
                        android:textColor="@color/color_content_text"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_gauzhu_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/color_content_text"
                        android:textSize="15dp" />


                </LinearLayout>
                <LinearLayout
                  android:id="@+id/ll_my_fans"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="粉丝"
                        android:textColor="@color/color_content_text"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/color_content_text"
                        android:textSize="15dp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_02"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_top_bg"
                android:layout_centerVertical="true"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_my_msg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_setting_item_selector"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/img_tongzhi" />

                    <TextView
                        android:id="@+id/tv_message"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:text="我的通知"
                        android:textColor="@color/color_content_text"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:layout_marginRight="25dp"
                        android:src="@drawable/img_arrow_r" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/ll_setting"
                    android:layout_centerVertical="true"
                    android:background="@color/color_bg_line" />
                <LinearLayout
                    android:id="@+id/ll_03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/ll_my_shop"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_setting_item_selector"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="25dp"
                            android:src="@drawable/img_my_shop" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:text="我的门店"
                            android:textColor="@color/color_content_text"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:layout_marginRight="25dp"
                            android:src="@drawable/img_arrow_r" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/ll_setting"
                    android:layout_centerVertical="true"
                    android:background="@color/color_bg_line" />
                <LinearLayout
                    android:id="@+id/ll_my_xiaofei"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_setting_item_selector"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/img_my_xiaofei" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:text="我的消费"
                        android:textColor="@color/color_content_text"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:layout_marginRight="25dp"
                        android:src="@drawable/img_arrow_r" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_my_data"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:background="@drawable/bg_setting_item_selector"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/img_my_data" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:text="体测数据"
                        android:textColor="@color/color_content_text"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:layout_marginRight="25dp"
                        android:src="@drawable/img_arrow_r" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/ll_setting"
                    android:layout_centerVertical="true"
                    android:background="@color/color_bg_line" />
                <LinearLayout
                    android:id="@+id/ll_my_shouhuan"

                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:background="@drawable/bg_setting_item_selector"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/img_shou_huan" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:text="智能手环"
                        android:textColor="@color/color_content_text"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:layout_marginRight="25dp"
                        android:src="@drawable/img_arrow_r" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ll_setting"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/bg_setting_item_selector"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/img_setting" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:text="设置"
                        android:textColor="@color/color_content_text"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:layout_marginRight="25dp"
                        android:src="@drawable/img_arrow_r" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/ll_setting"
                    android:layout_centerVertical="true"
                    android:background="@color/color_bg_line" />


            </LinearLayout>

        </RelativeLayout>
    </com.cn.danceland.myapplication.view.HeadZoomScrollView>


</RelativeLayout>
