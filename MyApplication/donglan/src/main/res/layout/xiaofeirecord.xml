<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/xiaofei_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/dl_gery">

        <ImageView
            android:id="@+id/xiaofei_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:src="@drawable/img_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="消费记录"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_leiji"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/xiaofei_title">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content"
          >

            <TextView
                android:id="@+id/rl_leijichongzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="累计充值：¥ "
                android:textColor="@color/color_dl_yellow"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_leijichongzhi"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_dl_yellow"
                android:textSize="16sp" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/rl_leijixiaofei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="累计消费：¥ "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_leijixiaofei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rl_leijixiaofei"
                android:textSize="16sp" />

        </RelativeLayout>


    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@+id/rl_leiji"
        android:background="@color/black"></View>

    <ListView
        android:id="@+id/lv_xiaofei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line">


    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line">

        <include
            android:id="@+id/rl_error"
            layout="@layout/no_info_layout"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>