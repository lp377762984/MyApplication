<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tuanke_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tuanke_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tuanke_img"
            android:layout_toRightOf="@+id/tuanke_img"
            android:layout_marginLeft="10dp"
            android:text="8:00-9:00"
            android:textSize="14sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tuanke_leibie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tuanke_img"
            android:layout_marginLeft="10dp"
            android:text="单车课"
            android:textSize="16sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tuanke_jibie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tuanke_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tuanke_img"
            android:text="课程级别:M"
            android:textSize="14sp"
            android:textColor="#c0c0c0"
            />

        <TextView
            android:id="@+id/tuanke_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tuanke_img"
            android:layout_toRightOf="@+id/tuanke_jibie"
            android:layout_marginLeft="50dp"
            android:text="操房"
            android:textSize="14sp"
            android:textColor="#c0c0c0"
            />
        <RelativeLayout
            android:id="@+id/tuanke_yuyue"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/tuanke_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@color/dl_gery"
            >
            <TextView
                android:id="@+id/tv_yuyue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="预约"
                android:textColor="@color/white"
                android:textSize="16sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/tuanke_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:id="@+id/tuanke_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="马化腾"
                android:textSize="14sp"
                android:textColor="#c0c0c0"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_item"
        android:background="#f5f5f5"
        />

</RelativeLayout>