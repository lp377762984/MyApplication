    <RadioGroup
        android:id="@+id/rg_who"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtn_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_radiobtn"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="购卡"
            android:textColor="#333333" />

        <RadioButton
            android:id="@+id/rbtn_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_radiobtn"
            android:button="@null"
            android:gravity="center"
            android:text="购买定金"
            android:textColor="#333333" />
    </RadioGroup>


    <CheckBox
        android:id="@+id/cb_forother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="为好友购卡"
        android:textColor="#333333"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/cb_dingjin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="预付定金"
        android:textColor="#333333"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_select_counselor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_bg_phone"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="*请选择您的会籍顾问"
        android:textColor="#666666"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_select_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_bg_phone"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="*请选开卡日期"

        android:textColor="#666666"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et_name"
        style="@style/EtStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_bg_phone"
        android:hint="请输入好友姓名"
        android:paddingLeft="20dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_bg_phone"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_phone"
            style="@style/EtStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入好友电话"
            android:inputType="phone" />

        <ImageView
            android:id="@+id/iv_phonebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/img_phonebook" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="会员须知"
        android:textColor="#333"
        android:textSize="12sp" />

    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:background="@color/color_dl_yellow" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <TextView
        android:id="@+id/tv_shuoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp"
        android:text=""
        android:textColor="#333"
        android:textSize="12sp" />
</ScrollView>



        <Button
            android:id="@+id/btn_commit"
            style="@style/BtnCommitStyle"

            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:text="购买" />



    <Button
        android:id="@+id/btn_dj_commit"
        style="@style/BtnCommitStyle"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:text="预付定金"
        android:visibility="gone" />


</LinearLayout>
