<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dl_gery"

        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:onClick="back"
           android:paddingLeft="15dp"

            android:src="@drawable/img_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="注册"

            android:textColor="@android:color/white"
            android:textSize="18sp"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9F9">

        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_bg_phone"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <!--       <Spinner
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:entries="@array/phone_codes"
                       android:layout_gravity="center_vertical"
                       android:id="@+id/sp_phone">

                   </Spinner>-->
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/img_phone" />

            <EditText
                android:id="@+id/et_phone"
                style="@style/EtStyle"
                android:hint="请输入您的手机号"
                android:inputType="phone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_getsms"
            style="@style/TvGetsmsStyle"
            android:layout_below="@+id/ll_phone"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/ll_getsms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_getsms"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_bg_phone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/img_muber" />

            <EditText
                android:id="@+id/et_sms"
                style="@style/EtStyle"
                android:hint="请输入短信验证码"
                android:inputType="number" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_miman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_getsms"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_bg_phone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/img_password" />

            <EditText
                android:id="@+id/et_password"
                style="@style/EtStyle"
                android:layout_weight="1"
                android:hint="请输入密码（6-20位）"
                android:inputType="textPassword" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_miman"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_bg_phone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/img_password" />

            <EditText
                android:id="@+id/et_confirm_password"
                style="@style/EtStyle"
                android:layout_weight="1"
                android:hint="请再次输入密码"
                android:inputType="textPassword" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_agreement"
            android:layout_width="wrap_content"
            android:layout_below="@+id/ll_confirm_password"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cb_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:text="已阅读并同意"/>
            <TextView
                android:id="@+id/tv_agreemnet"
                android:layout_width="wrap_content"
                android:text="《用户协议》"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="@color/color_dl_yellow"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_commit"
            style="@style/BtnCommitStyle"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="172dp"
            android:text="完成" />

    </RelativeLayout>


</LinearLayout>
