<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_bg_mianlayout"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/iv_back"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dl_gery">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_back"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            />
        <TextView
            style="@style/TextViewTitileStyle"
            android:text="我的资料"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/head_image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_setting_item_selector"
        android:layout_below="@+id/iv_back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="头像"
            android:textSize="15sp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleimageview"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
           android:src="@drawable/img_my_avatar"
            />

    </RelativeLayout>
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_below="@+id/head_image"
        />
    <RelativeLayout
        android:id="@+id/name"
        android:background="@drawable/bg_setting_item_selector"
        android:layout_below="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="昵称"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:text="小猴子"
            android:textSize="13sp"
            android:textColor="#C0C0C0"
            />

    </RelativeLayout>
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_below="@+id/name"
        />
    <RelativeLayout
        android:id="@+id/sex"
        android:background="@drawable/bg_setting_item_selector"
        android:layout_below="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="性别"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/text_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:text="女"
            android:textSize="13sp"
            android:textColor="#C0C0C0"
            />
    </RelativeLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_below="@+id/sex"
        />

    <RelativeLayout
        android:id="@+id/height"
        android:layout_below="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_setting_item_selector"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身高"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:id="@+id/tv_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:textColor="#c0c0c0"
            />
    </RelativeLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_below="@+id/height"
        />

    <RelativeLayout
        android:id="@+id/weight"
        android:layout_below="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_setting_item_selector"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体重"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:textColor="#c0c0c0"
            />
    </RelativeLayout>

    <View
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_below="@+id/weight"
        />
    <RelativeLayout
        android:id="@+id/rl_zone"
        android:layout_below="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_setting_item_selector"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地区"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:id="@+id/tv_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#C0C0C0"
            />
    </RelativeLayout>
    <View
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_below="@+id/rl_zone"
        />
    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_below="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_setting_item_selector"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#C0C0C0"
            />
    </RelativeLayout>

    <View
        android:id="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_below="@+id/rl_phone"
        />

    <RelativeLayout
        android:id="@+id/identity"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/line7"
        android:background="@drawable/bg_setting_item_selector"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:text=""
            android:textSize="13sp"
            android:textColor="#C0C0C0"
            />
    </RelativeLayout>

</RelativeLayout>