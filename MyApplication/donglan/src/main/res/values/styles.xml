<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/menu_bg</item>
        <item name="colorPrimaryDark">@color/dl_gery</item>
        <item name="colorAccent">@color/color_dl_yellow</item>
    </style>
    <!--标题样式-->
    <style name="TextViewTitileStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
<style name="imgsStyle" parent="Matisse.Zhihu">
    <item name="colorPrimary">@color/dl_gery</item>

</style>
    <!--输入框样式-->
    <style name="EtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">#666666</item>
    </style>
    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>

    </style>

    <!--提交按钮样式-->
    <style name="BtnCommitStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_bg_selector</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">完成</item>

    </style>
    <!--获取验证码样式-->
    <style name="TvGetsmsStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:background">@drawable/text_sms_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:text">获取验证码</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="selectorMenuAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/selector_enter</item>
        <item name="android:windowExitAnimation">@anim/selector_exit</item>
    </style>


